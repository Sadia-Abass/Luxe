@model ProductListViewModel

@{
    Layout = "_Layout";
}
<h1>@Model.CurrentCategory</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach(var item in Model.Products)
    {
        <div class="col">
            <div class="card product-card">
                <img src="@item.ImageThumbnailUrl" class="card-img-top" alt="@item.Name"/>
                <div class="card-body product-button">
                    <h4 class="d-grid"></h4>
                    <div class="d-flex justify-content-between mt-2">
                        <h2 class="text-start">
                            <a class="product-link" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                        </h2>
                        <h5 class="text-nowrap">@item.Price.ToString("c")</h5>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
